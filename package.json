{
  "name": "sze-pseudocode-interpreter",
  "version": "1.0.0",
  "repository": "https://github.com/attila-molnar/sze-pseudocode-interpreter.git",
  "author": "Attila Moln√°r <mail@molnarattila.net>",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
	"clean-dir": "^1.0.3",
    "chai": "^4.2.0",
    "istanbul": "^0.4.5",
    "mocha": "^7.1.1",
    "nyc": "^15.0.0",
    "ts-node": "^8.8.1",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "precoverage": "cleandir Interpreter/@tests/@report",
    "coverage": "nyc mocha --timeout 15000 -r ts-node/register Interpreter/@tests/**/*.test.ts",
    "test": "mocha --timeout 15000 -r ts-node/register Interpreter/@tests/**/*.test.ts",
	"build": "tsc -p Interpreter/tsconfig.json"
  },
  "nyc": {
    "include": [
      "Interpreter/**/*.ts"
    ],
    "exclude": [
      "Interpreter/@tests/**/*"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "report-dir": "Interpreter/@tests/@report",
    "temp-directory": "./@temp"
  },
  "dependencies": {
  }
}
